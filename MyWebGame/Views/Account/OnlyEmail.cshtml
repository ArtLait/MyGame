@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model MyWebGam.Models.OnlyEmailViewModel
<div class="container-fluid">
    @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post,

new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()

        <div class="editor-label">
            @Html.LabelFor(model => model.Email)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.Email, new { required = "true" })
            @Html.ValidationMessageFor(model => model.Email)
        </div>
        
        <input type="submit" value=@Resources.Web.ChangePassword class="btn btn-default" />
    }
</div>
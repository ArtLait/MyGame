@model MyWebGam.Models.OnlyEmailViewModel
<div class="container-fluid">
    @using (Html.BeginForm("OnlyEmail", "Account", FormMethod.Post, 
        new { @class = "form-horizontal form-auth-reg", role = "form", id="onlyEmailForm" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)   
        @Html.LabelFor(model => model.Email, new { @class = "label-auth-reg" })                
        @Html.TextBoxFor(model => model.Email, new { required = "true", @class = "input-auth-reg", autofocus = "" })
        @Html.ValidationMessageFor(model => model.Email)       
        
        <input type="submit" value=@Resources.Web.ChangePassword class="btn btn-default" />
    }
</div>
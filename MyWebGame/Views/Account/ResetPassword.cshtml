@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model MyWebGam.Models.ResetPasswordViewModel
<div class="container-fluid">
    @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post,

new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()        
        
        <div class="editor-label">
            @Html.LabelFor(model => model.Password)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.Password, new { required = "true" })
            @Html.ValidationMessageFor(model => model.Password)
        </div>
        
        <div class="editor-label">
            @Html.LabelFor(model => model.RepeatPassword)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.RepeatPassword, new { required = "true" })
            @Html.ValidationMessageFor(model => model.RepeatPassword)
        </div>

        <input type="submit" value=@Resources.Web.ChangePassword class="btn btn-default" />
    }
</div>